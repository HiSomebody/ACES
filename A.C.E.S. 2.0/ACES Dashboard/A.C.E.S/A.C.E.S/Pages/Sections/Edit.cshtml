@page "/Students/{ID:int}/Edit"
@model A.C.E.S.Pages.Sections.EditModel
@{
    ViewData["Title"] = "Edit Student: " + Model.Section.Name;
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Section.Name" class="control-label"></label>
        <input asp-for="Section.Name" class="form-control" value="@Model.Section.Name" />
        <span asp-validation-for="Section.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Section.Email" class="control-label"></label>
        <input asp-for="Section.Email" class="form-control" value="@Model.Section.Email" />
        <span asp-validation-for="Section.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
        <input type="button" value="Cancel" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}