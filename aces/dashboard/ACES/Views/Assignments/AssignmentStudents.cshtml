@model ACES.Models.ViewModels.AssignmentStudentsVM

@{
    ViewData["Title"] = "Course Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.AssignmentName</h2>
<h3>Students with Submissions</h3>

<input type="button" value="Compare" style="text-align: center; top: 80%" onclick="location.href='@Url.Action("Index", "Comparison", new { @Model.AssignmentId })'" />
<p> </p>
<input type="button" value="View Results" style="text-align: center" onclick="location.href='@Url.Action("ComparisonResults", "Assignments", new { id = @Model.AssignmentId })'" />

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Comparison Results</th>
                <th>JSON results</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sAssignment in Model.StudentAssignments)
            {
            <tr>
                <td>@sAssignment.StudentName</td>
                <td>@sAssignment.NumCommits</td>
                <td>@sAssignment.JSONCode</td>
                <td>
                    <a asp-controller="Assignments" asp-action="AssignmentStudentCommits" asp-route-id="@sAssignment.Id">Commits</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Courses" asp-action="CourseAssignments" asp-route-id="@Model.CourseId">Back to List</a>
</div>
