@model IEnumerable<ACES.Models.Assignment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="StudentRepoForm" asp-controller="Assignments" asp-route-assignmentId="@item.Id">Download Assignment</a>
                </td>
            </tr>
        }
    </tbody>
</table>
